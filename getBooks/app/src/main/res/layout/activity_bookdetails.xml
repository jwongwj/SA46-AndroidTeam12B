<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorViolet">

    <!-- Image -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="164dp"
        android:layout_height="175dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="75dp"
        android:background="@color/colorWhite" />

    <!-- Title -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="14dp"
        android:text="Title"
        android:fontFamily="serif"
        android:textColor="@color/colorWhite"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Price -->
    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="96dp"
        android:text="Price"
        android:fontFamily="serif"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="20sp" />

    <!-- Free Delivery Text -->
    <TextView
        android:id="@+id/textViewFreeDelivery"
        android:layout_width="163dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textViewPrice"
        android:layout_marginTop="133dp"
        android:text="Free Delivery for purchase above S$30.00"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        android:textStyle="italic" />

    <!-- Delivery Days Text -->
    <TextView
        android:id="@+id/textViewDelDays"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textViewPrice"
        android:layout_marginTop="195dp"
        android:text="3 - 7 working days"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        android:textStyle="italic" />

    <!-- Book ID -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginBottom="204dp"
        android:text="Book ID:"
        android:textColor="@color/colorLightViolet"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewID"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewCategory"
        android:layout_alignTop="@+id/textView5"
        android:layout_marginStart="1dp"
        android:text="ID"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Author -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginBottom="103dp"
        android:text="Author:"
        android:textColor="@color/colorLightViolet"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewAuthor"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewCategory"
        android:layout_alignTop="@+id/textView2"
        android:text="Author"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Category -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginBottom="155dp"
        android:text="Category:"
        android:textColor="@color/colorLightViolet"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewCategory"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView"
        android:layout_marginEnd="12dp"
        android:text="Category"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <!-- ISBN -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginBottom="52dp"
        android:text="ISBN:"
        android:textColor="@color/colorLightViolet"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewISBN"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewCategory"
        android:layout_alignTop="@+id/textView3"
        android:text="ISBN"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:textStyle="bold" />


    <!-- Horizontal Dividers -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="-233dp"
        android:background="?android:attr/listDivider" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="145dp"
        android:background="?android:attr/listDivider" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="93dp"
        android:background="?android:attr/listDivider" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="44dp"
        android:background="?android:attr/listDivider" />
</RelativeLayout>

