<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Image -->
    <ImageView
        android:id="@+id/indvBookImage"
        android:layout_width="164dp"
        android:layout_height="175dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/back" />

    <!-- Title -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="14dp"
        android:fontFamily="serif"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"/>

    <!-- Price -->
    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="96dp"
        android:fontFamily="serif"
        android:text="@string/price"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Qty -->
    <TextView
        android:id="@+id/textViewQty"
        android:layout_width="163dp"
        android:layout_height="66dp"
        android:layout_alignEnd="@+id/textViewTitle"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-4dp"
        android:layout_marginTop="132dp"
        android:textSize="16sp"
        android:textStyle="italic" />

    <!-- Book ID -->
    <TextView
        android:id="@+id/textViewIDLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginBottom="204dp"
        android:text="@string/book_id"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewID"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewCategory"
        android:layout_alignTop="@+id/textViewIDLabel"
        android:layout_marginStart="1dp"
        android:text="@string/id"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Author -->
    <TextView
        android:id="@+id/textViewAuthorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginBottom="103dp"
        android:text="@string/author"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewAuthor"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewCategory"
        android:layout_alignTop="@+id/textViewAuthorLabel"
        android:text="@string/tvAuthor"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Category -->
    <TextView
        android:id="@+id/textViewCategoryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginBottom="155dp"
        android:text="@string/category"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewCategory"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textViewCategoryLabel"
        android:layout_marginEnd="12dp"
        android:text="@string/tvCategory"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <!-- ISBN -->
    <TextView

        android:id="@+id/textViewISBNLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginBottom="52dp"
        android:text="@string/isbn"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewISBN"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewCategory"
        android:layout_alignTop="@+id/textViewISBNLabel"
        android:text="@string/tvisbn"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Horizontal Dividers -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewIDLabel"
        android:layout_marginTop="-233dp"
        android:background="?android:attr/listDivider" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="145dp"
        android:background="?android:attr/listDivider" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="93dp"
        android:background="?android:attr/listDivider" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="44dp"
        android:background="?android:attr/listDivider" />

</RelativeLayout>

