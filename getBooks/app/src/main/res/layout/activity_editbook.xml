<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/round_borders"/>

    <EditText
        android:id="@+id/textViewTItle"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewTItleLabel"
        android:layout_alignEnd="@+id/textViewCategory"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Edit Book Activity"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/textViewCategory"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="192dp"
        android:layout_marginEnd="25dp"
        android:text="Category"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editViewAuthor"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewAuthorLabel"
        android:layout_alignEnd="@+id/textViewTItle"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textViewISBN"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewTItle"
        android:layout_alignTop="@+id/textViewISBNLabel"
        android:text="ISBN"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editViewPrice"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textViewTItle"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textViewCategoryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="186dp"
        android:layout_marginStart="20dp"
        android:text="Category:"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textViewAuthorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textViewCategoryLabel"
        android:layout_marginBottom="141dp"
        android:text="Author:"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textViewISBNLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textViewCategoryLabel"
        android:layout_marginBottom="104dp"
        android:text="ISBN:"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textViewTItleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textViewCategoryLabel"
        android:layout_marginBottom="220dp"
        android:text="Title"
        android:textSize="14sp"
        android:textStyle="bold|italic" />


</RelativeLayout>

